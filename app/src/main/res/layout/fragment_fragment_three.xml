<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.winged_elite.myapplication.fragmentThree"
    android:id="@+id/parent"
    android:background="@drawable/ui2n">

    <SurfaceView android:id="@+id/surfaceView" android:layout_width="100dp"
        android:layout_height="100dp" android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clickButton" android:layout_marginBottom="89dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent" />
    <EditText android:layout_width="200dp" android:layout_height="100dp"
        android:id="@+id/editText1"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/clickButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
